<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Bank Finder</title>
    <link rel="stylesheet" href="/css/blood.css" /> <!-- Link to your CSS file -->
    
</head>
<body>

<header>
    <h1>Blood Bank Finder</h1>
</header>

<div class="container">
    <div class="form-container">
        <h2>Select Your Criteria</h2>
        <form action="/blood" method="POST">
            <div class="form-group">
                <label for="State_Name">State</label>
                <select id="State_Name" name="state" required onchange="loadDistricts()">
                    <option value="">Select State</option>
                    <% uniqueStates.forEach(state => { %>
                        <option value="<%= state %>"><%= state %></option>
                    <% }) %>
                </select>
            </div>
            
            <div class="form-group">
                <label for="District_Name">District</label>
                <select id="District_Name" name="district" required onchange="loadCities()">
                    <option value="">Select District</option>
                </select>
            </div>

            <div class="form-group">
                <label for="City_Name">City</label>
                <select id="City_Name" name="city" required onchange="loadBloodGroups()">
                    <option value="">Select City</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Blood_Group">Blood Group</label>
                <select id="Blood_Group" name="bloodGroup" required>
                    <option value="">Select Blood Group</option>
                </select>
            </div>

            <button type="submit" class="btn">Search</button>
        </form>
    </div>

    <!-- Results Section -->
    <div class="results-section">
        <% if (results && results.length > 0) { %>
            <h2>Blood Bank Results</h2>
            <table>
                <thead>
                    <tr>
                        <th>State</th>
                        <th>District</th>
                        <th>City</th>
                        <th>Blood Group</th>
                        <th>Blood Bank Name</th>
                        <th>Contact Info</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(result => { %>
                        <tr>
                            <td><%= result._state %></td>
                            <td><%= result._district %></td>
                            <td><%= result._city %></td>
                            <td><%= result.available_blood_group %></td>
                            <td><%= result.blood_bank_name %></td>
                            <td><%= result.contact_info %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="no-results">
                <p>No results found for the selected criteria.</p>
            </div>
        <% } %>
    </div>
</div>

<script src="/js/blood.js"></script>


</body>
</html>
